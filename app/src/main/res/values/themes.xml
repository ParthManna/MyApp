<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with custom colors -->
    <style name="Base.Theme.Searchapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light Theme Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="backgroundColor">@color/backgroundColor</item>

        <!-- Track and Thumb Colors -->
        <item name="trackColor">@color/track_active</item>
        <item name="thumbColor">@color/thumb_active</item>
    </style>

    <style name="Theme.Searchapp" parent="Base.Theme.Searchapp">
        <!-- Additional theme customizations can be placed here -->
    </style>
</resources>
